# Brightness control
# Made by Leo Smith
# Usage:
#   ./brightness.sh plus 5
#   ./brightness.sh minus 5

E_NO_ARG=-1
BRIGHTNESS=$(cat /sys/class/backlight/acpi_video0/brightness)

if [[ ! -e "/tmp/backlight" ]]; then
    echo "root" | sudo -S chown leo:leo /sys/class/backlight/acpi_video0/brightness
    touch /tmp/backlight_screen
fi

if [[ "$1" = "plus" ]]; then
    ((TEMP = $BRIGHTNESS + $2))
    if (($TEMP >= 10 )); then
        echo 10 > /sys/class/backlight/acpi_video0/brightness
    else
        echo $TEMP > /sys/class/backlight/acpi_video0/brightness
    fi
    echo $BRIGHTNESS
    echo $TEMP
else

    ((TEMP = $BRIGHTNESS - $2))
    if (($TEMP <= 0 )); then
        echo 0 > /sys/class/backlight/acpi_video0/brightness
    else
        echo $TEMP > /sys/class/backlight/acpi_video0/brightness
    fi
    echo $BRIGHTNESS
    echo $TEMP


fi
